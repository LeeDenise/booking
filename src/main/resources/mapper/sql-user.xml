<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="booking.mapper.UserMapper">

    <select id="selectAllUsers" resultType="booking.models.UserDto">
        SELECT
            user_id,
            email,
            first_name,
            last_name,
            phone,
            role
        FROM
            users
	</select>

    <select id="selectUserByUserId" parameterType="String" resultType="booking.models.UserDto">
        SELECT
            user_id,
            email,
            password,
            first_name,
            last_name,
            phone,
            role
        FROM
            users
        WHERE
            email = #{email}
    </select>

    <insert id="insertUser" parameterType="booking.models.UserDto">
        INSERT INTO users (password,
                            email,
                            first_name,
                            last_name,
                            phone,
                            role)
        VALUES (#{password},
                #{email},
                #{firstName},
                #{lastName},
                #{phone},
                #{role})
    </insert>


    <!-- clientDetail.do -->
    <select id="clientDetail" parameterType="int" resultType="booking.models.SecurityUser">
		<![CDATA[
        SELECT
            client_no,
            client_id,
            first_name,
            last_name,
            email,
            client_pwd,
            phone,
            reg_date,
            edit_date
        FROM
            client
        WHERE
            client_no = #{clientNo}
        ]]>
	</select>

    <update id="updateUser" parameterType="booking.models.UpdateUserDto">
        UPDATE
            users
        SET
            first_name = #{firstName},
            last_name = #{lastName},
            email = #{email},
            phone = #{phone}
        WHERE
            email = #{email}
	</update>

    <!-- deleteClient.do -->
    <delete id="deleteClient" parameterType="int">
		<![CDATA[
        DELETE FROM
            client
        WHERE
            client_no = #{clientNo}
        ]]>
	</delete>

</mapper>